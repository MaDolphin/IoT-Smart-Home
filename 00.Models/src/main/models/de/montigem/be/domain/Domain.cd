package de.montigem.be.domain;

import java.time.ZonedDateTime;

classdiagram Domain {

    /***********************************************************************************************************************
     * Mandatory classes
     **********************************************************************************************************************/

    class DomainUser {
      String username;
      Optional<String> encodedPassword;
      String passwordSaltBase64;
      ZonedDateTime registrationDate;
      Optional<String> initials;
      DomainUserActivationStatus activated;
      boolean enabled;
      String email;
      Optional<String> timID;
    }

    enum DomainUserActivationStatus {
      AKTIVIERT,
      MAIL_NICHT_GESENDET,
      MAIL_FEHLERHAFT,
      MAIL_GESENDET;
    }

    class RoleAssignment {
      String role;
      String objClass;
      Optional<Long> objId;
      Optional<String> attribute;
    }

    association  [*] RoleAssignment -> (user) DomainUser [1];

    enum ZahlenTyp {EURO, STUNDE, PROZENT, NONE; }

    /***********************************************************************************************************************
     * Domain specific classes
     **********************************************************************************************************************/

     class Sensor {
      String sensorId;
      SensorType type;
     }

     enum SensorType {
      TEMPERATURE,
      ANGLE,
      PERCENT;
     }

     class SensorValue {
      ZonedDateTime timestamp;
      int value;
     }

     association [1] Sensor -> (value) SensorValue [*];
}
