import java.util.List;

classdiagram CinemaSystem {

    class Cinema	{
	}
	
	class Movie {
	 + String title;
	 + int duration;
	 + Age minimumAge;
	}
	
	class Theatre {
	 + String name;
	 + int seats;
	}
	
	class Seat {
	 + int row;
	 + int number;
	 + SeatType type;
	}
	
	class Screening {
	 + int day;
	 + int month;
	 + int hour;
	}
	
	abstract class Booking {
	 + Seat seat;
	}
	
	class SoldTicket extends Booking {
	}
	
	class Reservation extends Booking {
	 + ReservationType type;
	}
	
    enum Age {
      ZERO,
      SIX,
      TWELVE,
      SIXTEEN,
	  EIGHTEEN;
	}
	
	enum ReservationType {
	  TELEPHONE,
	  INTERNET;
	}
	
	enum SeatType {
	 PARQUET,
	 LOGE;
	}
	
    // attributes
    association [1] Cinema -> Theatre [*];
	association [1] Cinema -> Screening [*];
	association [*] Screening -> Theatre [1];
	association [*] Screening -> Movie [1];
	association [1] Theatre -> (allseats)Seat [*];
	association [1] Screening -> Booking [*];
}
