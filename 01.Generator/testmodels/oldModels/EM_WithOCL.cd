package testmodels.correct; // JOR

import java.util.Date;

classdiagram EM_WithOCL {
  
  class Emp {
    PosKnd kind;
    WorkStatus status;
  }

  class Mgr extends Emp;
  
  class Tsk {
    Date startDate;
  }
  
  enum PosKnd { fullTime, partTime, external; }
  
  enum WorkStatus {available, bookedToProject, onVacation;}
  
  association Management [*] Emp (mng) <-> (mngBy) Mgr [0..1];

  association Tasking [1] Emp (doneBy) -- (worksOn) Tsk [0..2];

  // if an Emp is a Mgr she needs to work fullTime 
  
  OCL:[
  context Emp e inv: 
    typeif e instanceof Mgr then 
      e.kind == PosKnd.fullTime 
    else 
      true;
  ]

  // a manager manages at least one employee or is on vacation
  
  OCL:[
  context Mgr m inv:
    m.mng.size == 0 <=> m.status == WorkStatus.onVacation;
  ]

}
