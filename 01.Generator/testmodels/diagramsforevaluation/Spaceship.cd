package testmodels.diagramsforevaluation;

classdiagram Spaceship{

  class GameObject extends sfSprite{
    String mName;
    Integer mX;
    Integer mY;
  }

  class Player extends Ship{
    AlternateWeapon mAlternateWeapon;
    Integer mAmmo;
  }

  class PowerUp extends GameObject{
    PowerUpEffect mEffect;
    Integer mDuration;
  }

  class Enemy extends Ship;

  class BossEnemy extends Enemy;

  class StandardEnemy extends Enemy;

  class sfSprite;

  class Ship extends GameObject{
    Integer mHealth;
    Weapon mWeapon;
    Integer mFireRate;
  }

  enum PowerUpEffect{
    BETTER_WEAPON,
    CLOAKING,
    INVINCIBILITY;
  }

  enum Weapon{
    SINGLE_MISSILE,
    SPREAD_MISSILE,
    MINIGUN,
    TRIPLE_MINIGUN,
    LASER,
    TRI_LASER;
  }

  enum AlternateWeapon{
    MISSILE_BOMBARDMENT,
    MINEFIELD,
    SELF_DESTRUCT;
  }

}
